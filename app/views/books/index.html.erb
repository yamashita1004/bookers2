
<table>
  <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <%= form_with model:@book, local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %>
  <br><%= f.submit "Create Book" %></br>
  <% end %>
 
  <% @books.each do |book| %>
   <body>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to"Show","/books/#{book.id}"%></td>
      <td><%= link_to"Edit","/books/#{book.id}/edit" %></td>
      <td><%= link_to"Destroy","/books/#{book.id}",method: :delete,"data-confirm"=>"Are you sure?" %>
      </td>
    </tr>
    
    <% end %>
   </body>
</table>



